<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_data_feed_recipient_view_form" model="ir.ui.view">
        <field name="name">product.data.feed.recipient.form</field>
        <field name="model">product.data.feed.recipient</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h3><field name="name" placeholder="Service Name"/></h3>
                </div>
                <group string="Stock Availability Values">
                    <field name="special_avail_in"/>
                    <field name="special_avail_out"/>
                    <field name="special_avail_order" />
                </group>
            </form>
        </field>
    </record>

</odoo>
