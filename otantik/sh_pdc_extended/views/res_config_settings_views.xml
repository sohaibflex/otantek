<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!--  Accounting setting -->
    <record id="sh_pdc_account_setting_inherit" model="ir.ui.view">
        <field name="name">sh.pdc.account.setting.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='account']" position="inside">
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-6 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-lg-6" for="pdc_customer_under_collection" />
                                    <field name="pdc_customer_under_collection" style="width: 48%;" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
				


            </xpath>

        </field>
    </record>
</odoo>
