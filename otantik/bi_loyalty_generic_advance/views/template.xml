<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<template id="assets_for_pos" inherit_id="point_of_sale.assets">
			<xpath expr="." position="inside">
				<script type="text/javascript" src="/bi_loyalty_generic_advance/static/src/js/LoyaltyPopupWidget.js"/>
				<script type="text/javascript" src="/bi_loyalty_generic_advance/static/src/js/OrderWidgetExtendedAdvance.js"/>
				<script type="text/javascript" src="/bi_loyalty_generic_advance/static/src/js/pos_final.js"/>
			</xpath>
		</template>	
		<template id="assets_backend_ribbon" name="mail assets" inherit_id="mail.assets_backend">
			<xpath expr="//script[@src='/web/static/src/js/widgets/ribbon.js']" position="replace">
				<script type="text/javascript" src="/bi_loyalty_generic_advance/static/src/js/ribbon.js"></script>
			</xpath>
			<xpath expr="." position="inside">
				<link rel="stylesheet" type="text/css" href="/bi_loyalty_generic_advance/static/src/css/ribbon.css"/>
			</xpath>
		</template>
		<template id="portal_loyalty_history" name="My Loyalty History">
			<t t-call="portal.portal_layout">
				<div t-attf-class="card #{'pb-5' if report_type == 'html' else ''}">
				<div t-attf-class="#{'card-body' if report_type == 'html' else ''}">
					<!-- Informations -->
					<div id="informations">
						<br/>
						<div class="row" style="margin-left:1%">
							<div class="col-lg-6">
								<strong class="d-block mb-1">Customer Name:</strong>
								<span t-esc="partner.name"/>
								
							</div>
							<div class="col-lg-6">
								<strong class="d-block mb-1">Loyalty Tier:</strong>
								<span t-esc="partner.tier_id.sudo().tier_name"/>
								
							</div>
							<div class="col-lg-6" style="margin-top:10px">
								<strong class="d-block mb-1">Total Loyalty Points Earned:</strong>
								<span t-esc="partner.loyalty_pts"/>
							</div>
						</div>				
					</div>
				</div>
				<br/>
				<h3 style="margin-left:1%">Loyalty History
				</h3>
				<t t-if="not LoyaltyHistory">
					<p>There are currently no Loyalty History for your account.</p>
				</t>
				<div t-if="LoyaltyHistory" class="panel panel-default" style="margin-left:1%">
					<div class="table-responsive"><table class="table table-hover o_portal_my_doc_table">
						<thead>
							<tr class="active">
								<th>Order Type</th>
								<th>Customer Name</th>
								<th>Transaction Type</th>
								<th>Loyalty Points</th>
								<th>Credit Value</th>
							</tr>
						</thead>
						<t t-foreach="LoyaltyHistory" t-as="lp">
							<t t-if='lp.transaction_type == "debit"'>
								<tr style='background-color:rgba(255, 0, 24, 0.37);'>
									<t t-if="lp.order_id">
										<td><span t-field="lp.order_id.name"/></td>
									</t>
									<t t-if="lp.pos_order_id">
										<td><span t-field="lp.pos_order_id.name"/></td>
									</t>
									<td><span t-field="lp.partner_id.name"/></td>
									<td> <span t-field="lp.transaction_type"/>
									</td>
									<td>
										<span t-field="lp.points"/>
									</td>
									<td><span t-field="lp.credit_value"/>
									</td>
								</tr>
							</t>
							
							<t t-if='lp.transaction_type == "credit"'>
								<tr style='background-color:rgba(0, 128, 0, 0.34);'>
									<t t-if="lp.order_id">
										<td><span t-field="lp.order_id.name"/></td>
									</t>
									<t t-if="lp.pos_order_id">
										<td><span t-field="lp.pos_order_id.name"/></td>
									</t>
									<td><span t-field="lp.partner_id.name"/></td>
									<td> <span t-field="lp.transaction_type"/>
									</td>
									<td>
										<span t-field="lp.points"/>
									</td>
									<td><span t-field="lp.credit_value"/>
									</td>
								</tr>
							</t>
						</t>
					</table></div>
					<div t-if="pager" class="o_portal_pager text-center">
					  <t t-call="portal.pager"/>
					</div>
				</div>
			</div>
			</t>
		</template>




		
	</data>
</odoo>
